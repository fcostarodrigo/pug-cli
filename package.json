{
  "name": "pug-cli",
  "version": "1.0.0",
  "description": "",
  "bin": "dist/index.js",
  "scripts": {
    "build": "coffee --compile --output dist src && coffee src/setup/addShebang.coffee",
    "test": "jest",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fcostarodrigo/walk": "^5.0.1",
    "cosmiconfig": "^7.0.0",
    "dotenv": "^8.2.0",
    "glob-gitignore": "^1.0.14",
    "ignore": "^5.1.8",
    "lodash": "^4.17.20",
    "pug": "^3.0.0",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "coffeescript": "^2.5.1",
    "husky": "^4.3.4",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "memfs": "^3.2.0",
    "prettier": "^2.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "coffee"
    ],
    "testRegex": [
      "\\.test\\.coffee$"
    ],
    "transform": {
      "\\.coffee$": "./dist/setup/coffeeJestTransform.js"
    },
    "setupFiles": [
      "./src/setup/test.coffee"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yaml,yml,json,md}": [
      "prettier --write"
    ],
    "*.{coffee}": [
      "jest --findRelatedTests"
    ]
  }
}
