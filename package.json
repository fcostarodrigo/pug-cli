{
  "name": "pug-cli",
  "version": "1.0.0",
  "description": "CLI interface for pug",
  "bin": "dist/cliRun.js",
  "scripts": {
    "build": "coffee src/setup/build.coffee",
    "buildTestSetup": "coffee src/setup/buildTestSetup.coffee",
    "test": "jest",
    "format": "prettier --write ."
  },
  "keywords": [
    "pug",
    "cli",
    "watch"
  ],
  "author": "Rodrigo Fernandes da Costa",
  "license": "ISC",
  "dependencies": {
    "@fcostarodrigo/walk": "^5.0.1",
    "cosmiconfig": "^7.0.0",
    "dotenv": "^8.2.0",
    "glob-gitignore": "^1.0.14",
    "ignore": "^5.1.8",
    "lodash": "^4.17.20",
    "pug": "^3.0.0",
    "watchr": "^6.9.0",
    "yargs": "^16.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "coffee",
      "js"
    ],
    "testMatch": [
      "**/*.test.coffee"
    ],
    "transform": {
      "\\.coffee$": "./testSetup/transform.js"
    },
    "dependencyExtractor": "./testSetup/dependencyExtractor.js",
    "moduleNameMapper": {
      "^fs$": "memfs"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ],
    "*.coffee": [
      "jest --findRelatedTests"
    ]
  },
  "devDependencies": {
    "coffeescript": "^2.5.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "memfs": "^3.2.0",
    "prettier": "^2.2.1"
  }
}
